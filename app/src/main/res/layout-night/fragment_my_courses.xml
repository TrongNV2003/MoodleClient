<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainhome.MyCoursesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:text="Course Overview"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/edittextbackground"
        android:drawableLeft="@drawable/find"
        android:hint="Find my courses"
        android:inputType="text" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:drawableRight="@drawable/arrow"
        android:text="In progress"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/mobile"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:drawableLeft="@drawable/mobile"
        android:drawableRight="@drawable/more_3dot"
        android:text="Mobile Application Development"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"/>

    <Button
        android:id="@+id/web"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/web"
        android:drawableRight="@drawable/more_3dot"
        android:text="Web Application Development"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="textStart"
        app:iconPadding="15dp"/>

    <Button
        android:id="@+id/machine"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/machine"
        android:drawableRight="@drawable/more_3dot"
        android:text="Machine Learning and Data Mining"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="textStart"
        app:iconPadding="15dp"/>

    <Button
        android:id="@+id/database"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/database"
        android:text="Advanced Database"
        android:drawableRight="@drawable/more_3dot"
        android:layout_marginTop="10dp"
        android:layout_below="@id/machine"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"/>

    <Button
        android:id="@+id/python"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/web"
        android:drawableRight="@drawable/more_3dot"
        android:text="Applied Data Science with Python"
        android:layout_below="@id/database"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="textStart"
        app:iconPadding="15dp"/>
</RelativeLayout>